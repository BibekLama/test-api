<div class="col-xs-12 col-md-8 alert alert-dismissible fade show d-none" role="alert" id="msg-box">
    <strong id="msg-title">Success !!!</strong>
    <p id="msg-content">message here</p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="col-xs-12 col-md-8 card mb-5 p-0 add-box shadow">
    <div class="card-header">
        <h2>TWS Home</h2>
    </div>
    <div class="card-body">
        <form action="" id="add-form">
            <div class="form-group">
                <textarea class="form-control message-box" name="message" id="exampleFormControlTextarea1"
                    placeholder="Write your twitt!" rows="2"></textarea>
            </div>
            <button type="submit" class="btn btn-danger add-btn rounded-pill d-flex align-items-center">
                <div class="spinner-border spinner-border-sm mr-2 d-none" id="add-loader" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                Add
            </button>
        </form>
    </div>
</div>

<h2 class="mb-3">Messages </h2>

<div class="col-xs-12 col-md-8">
    <div class="card row mb-4 d-none" id="message-loading">
        <div class="card-body d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
    <div class="row" id="message-list-box">
        <div class="card col-12 mb-4 p-0 shadow post-card">
            <div class="card-header">
                <div class="header-left">
                    <div class="avatar">
                        <img src="/images/profile.jpg" class="rounded" alt="Avatar" />
                    </div>
                    <h5>User</h5>
                </div>
                <a href="/tws/delete/{{this._id}}" class="close text-danger" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
            </div>
            <div class="card-body">
                <p class="card-text">twit message</p>
            </div>
            <div class="card-footer text-muted">
                <small>2 minutes ago</small>
                <a href="/tws/action/edit/id"><i class="fa fa-edit"></i></a>
            </div>
        </div>
    </div>
</div>