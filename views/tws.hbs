<div class="jumbotron col-12 twit-add-box">
    <form action="/" method="POST">
        <div class="form-group">
            <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-danger btn-lg">Add</button>
    </form>
</div>

<div class="col-12">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-md-4 twit-list">
        {{#each tws}}
        <div class="col xs-12 sm-6 md-4 lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{{this.message}}}</h5>
                    <p class="card-text text-muted"><small>{{{ formatDate this.createdAt }}}</small></p>
                    <div class="d-flex justify-content-end">
                        <form action="/delete" method="POST">
                            <input type="hidden" name="id" value="{{this._id}}" />
                            <button type="submit" class="btn btn-light btn-sm">Delete</button>
                        </form>
                        <a href="/edit/{{this._id}}" class="btn btn-light btn-sm ml-2">Edit</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>